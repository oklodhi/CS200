#include <iostream> // Input-output stream library 
using namespace std; // Use the standard library 

int main() {
	float tspBakingSoda, tspBakingPowder, cupsButter, CupsSugar, amountEggs; 
	tspBakingPowder = .5; 
	tspBakingSoda = 1; 
	cupsButter = 1; 
	CupsSugar = 1.5; 
	amountEggs = 1; 

	cout << "Sugar Cookie Recipe: " << endl;

	cout << "" << endl;
	cout << "" << endl;

	cout << cupsButter << " c butter" << endl;
	cout << amountEggs << " egg" << endl;
	cout << CupsSugar << " c white sugar" << endl;
	cout << tspBakingPowder << " tsp baking powder" << endl;
	cout << tspBakingSoda << " tsp baking soda" << endl;
	
	int a;
	cin >> a;

	return 0;
}
